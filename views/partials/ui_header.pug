.computer.only.tablet.only.row 
  .ui.borderless.fixed.menu
    .ui.container
      a.item
        img.ui.image(src=cdn+'/logo.svg', id='logo', width='150px')
      if user
        .right.menu
          .item
            .image
              img.ui.image.rounded(src=user.profile.picture)
            span(style="margin-right: 5px;")= user.username
